<h1>New Cuisine</h1>

<% if @cuisine.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@cuisine.errors.count, "error") %> prohibited this cuisine from being saved:</h2>

    <ul>
      <% @cuisine.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @cuisine) do |f| %>
    <%= f.label("Name:") %>
    <%= f.text_field(:name) %> <br>
    <hr>
    New Restaurants: <br>
    <%= f.fields_for :restaurants do |r|%>
        <%= r.label("Name:") %>
        <%= r.text_field(:name) %> <br>
        <%= r.label("Description:") %>
        <%= r.text_area(:description) %> <br>
        <%= r.label("Price:") %>
        <%= r.select(:price, [1,2,3,4]) %> <br>
        <%= r.label("Rating:") %>
        <%= r.select(:rating, 1..5) %> <br>
        <%= r.label("Chain:") %>
        <%= r.select(:is_chain, [["Yes", true], ["No", false]]) %> <br>
    <% end %>
    <%= f.submit %>
<% end %>